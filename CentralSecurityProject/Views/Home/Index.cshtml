@{
    ViewBag.Title = "صفحه اصلی";
}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/Slide 01.jpg" alt="تعاریف منابع">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:yellow">@Resources.Resource.XResourceDefinition</h5>
                <p style="color:yellow">@Resources.Resource.XResourceDefinitionDesc</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/Slide 02.jpg" alt="تعاریف کاربران">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:yellow">@Resources.Resource.XDefineUser</h5>
                <p style="color:yellow">@Resources.Resource.XDefineUserDesc</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/Slide 03.jpg" alt="تعاریف سطوح دسترسی">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:yellow">تعاریف سطوح دسترسی</h5>
                <p style="color:yellow">تعریف سطوح دسترسی در منابع زیر سیستم های موجود در سیستم جامع</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/Slide 04.jpg" alt="تعاریف سطوح دسترسی کاربران">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:yellow">تعاریف سطوح دسترسی کاربران</h5>
                <p style="color:yellow">تعریف سطوح دسترسی کاربران در هریک از زیر سیستم های موجود در سیستم جامع</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/Slide 05.jpg" alt="تعاریف گروه های دسترسی">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:yellow">تعاریف گروه های دسترسی</h5>
                <p style="color:yellow">تعریف گروه دسترسی به منابع در هریک از زیر سیستم های موجود در سیستم جامع</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">قبلی</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">بعدی</span>
    </a>
</div>



