@model CentralSecurityProject.Models.Security.AppUserModel
<h4><i class="glyphicon glyphicon-apple"></i>جزئیات @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Details", "AppUser", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(m => m.AppUserId);


    <div class="form-group row">
        @Html.LabelFor(m => m.ApplicationId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ApplicationId, (SelectList)ViewBag.Applications, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.UserId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.UserId, (SelectList)ViewBag.Users, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsActive, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.IsActive, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsAdmin, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.IsAdmin, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.LastMachineName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastMachineName, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-md-10">
            @Html.ActionLink("برگشت", "Index", "AppUser", new { UserId = ViewBag.UserId, ApplicationId = ViewBag.ApplicationId }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
}
