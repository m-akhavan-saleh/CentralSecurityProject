@model CentralSecurityProject.Models.Security.RequestModel
<h4><i class="glyphicon glyphicon-apple"></i>تعریف @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Details", "Request", null, FormMethod.Post, htmlAttributes: new { }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.RequestId);

    <div class="form-group row">
        @Html.LabelFor(m => m.RequestTypeId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RequestTypeId, (SelectList)ViewBag.RequestTypes, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RequestTypeId, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.RequestDescription, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.RequestDescription, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RequestDescription, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-md-10">
            @Html.ActionLink(Resources.Resource.Back, "Index", "Request", htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
}
