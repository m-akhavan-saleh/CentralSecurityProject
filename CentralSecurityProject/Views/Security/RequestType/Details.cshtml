@model CentralSecurityProject.Models.Security.RequestTypeModel
<h4><i class="glyphicon glyphicon-apple"></i>جزئیات @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Details", "RequestType", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(m => m.RequestTypeId);

    <div class="form-group row">
        @Html.LabelFor(m => m.RequestTypeId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RequestTypeId, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.RequestTypeName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RequestTypeName, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsActive, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-1">
            @Html.CheckBoxFor(m => m.IsActive, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-md-10">
            @Html.ActionLink(Resources.Resource.Back, "Index", "RequestType", null, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
}
