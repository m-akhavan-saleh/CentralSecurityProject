@model IEnumerable<CentralSecurityProject.Models.Security.RequestStatusModel>
<h4><i class="glyphicon glyphicon-alert"></i>@ViewBag.Title</h4>
<hr />

<div class="col-md-12">
    @Html.CustomActionLink(Resources.Resource.Create, "Create", "RequestStatus", null, actionLinkType: CentralSecurityProject.Common.ActionLinkType.Create) |
    @{
        if (ViewBag.ID != null)
        {
            @Html.CustomActionLink(Resources.Resource.Edit, "Edit", "RequestStatus", new { id = @ViewBag.ID }, actionLinkType: CentralSecurityProject.Common.ActionLinkType.Edit)
            <a>|</a>
            @Html.CustomActionLink(Resources.Resource.Delete, "Delete", "RequestStatus", new { id = @ViewBag.ID }, actionLinkType: CentralSecurityProject.Common.ActionLinkType.Delete)
            <a>|</a>
            @Html.CustomActionLink(Resources.Resource.Details, "Details", "RequestStatus", new { id = @ViewBag.ID }, actionLinkType: CentralSecurityProject.Common.ActionLinkType.Details)
        }
        else
        {
            @Html.CustomActionLink(Resources.Resource.Edit, "Edit", "RequestStatus", new { id = @ViewBag.ID }, linkClass: "btn btn-secondary btn-sm disabled", actionLinkType: CentralSecurityProject.Common.ActionLinkType.Edit)
            <a>|</a>
            @Html.CustomActionLink(Resources.Resource.Delete, "Delete", "RequestStatus", new { id = @ViewBag.ID }, linkClass: "btn btn-secondary btn-sm disabled", actionLinkType: CentralSecurityProject.Common.ActionLinkType.Delete)
            <a>|</a>
            @Html.CustomActionLink(Resources.Resource.Details, "Details", "RequestStatus", new { id = @ViewBag.ID }, linkClass: "btn btn-secondary btn-sm disabled", actionLinkType: CentralSecurityProject.Common.ActionLinkType.Details)
        }
    }
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="bg-secondary">
                <th class="text-center"></th>
                <th class="text-center">@Html.DisplayNameFor(m => m.RequestStatusId)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.RequestStatusName)</th>
                <th class="text-center">@Html.DisplayNameFor(m => m.IsActive)</th>
            </tr>
        </thead>
        <tbody>

            @{
                if (Model != null)
                {
                    foreach (CentralSecurityProject.Models.Security.RequestStatusModel item in Model)
                    {
                        if (ViewBag.ID != null && ViewBag.ID == @item.RequestStatusId)
                        {
                            <tr style="background-color:#d6e0f5" class="text-center">
                                <td>
                                    @Html.CustomActionLink(Resources.Resource.Select, "Select", "RequestStatus", new { id = item.RequestStatusId }, linkClass: "btn btn-primary btn-sm", actionLinkType: CentralSecurityProject.Common.ActionLinkType.Selected)
                                </td>
                                <td>@item.RequestStatusId</td>
                                <td>@item.RequestStatusName</td>
                                <td>@(item.IsActive ? "فعال" : "غیر فعال")</td>
                            </tr>
                        }
                        else
                        {
                            <tr class="text-center">
                                <td>
                                    @Html.CustomActionLink(Resources.Resource.Select, "Select", "RequestStatus", new { id = item.RequestStatusId }, linkClass: "btn btn-secondary btn-sm", actionLinkType: CentralSecurityProject.Common.ActionLinkType.Unselected)
                                </td>
                                <td>@item.RequestStatusId</td>
                                <td>@item.RequestStatusName</td>
                                <td>@(item.IsActive ? "فعال" : "غیر فعال")</td>
                            </tr>
                        }
                    }
                }
            }
        </tbody>
    </table>


</div>