@model CentralSecurityProject.Models.Security.AppGroupModel
<h4><i class="glyphicon glyphicon-apple"></i>جزئیات @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Details", "AppGroup", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(m => m.AppGroupId);

    <div class="form-group row">
        @Html.LabelFor(m => m.ApplicationId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ApplicationId, (SelectList)ViewBag.Applications, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.AppGroupNo, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AppGroupNo, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.AppGroupName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AppGroupName, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsActive, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-1">
            @Html.CheckBoxFor(m => m.IsActive, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-md-10">
            @Html.ActionLink("برگشت", "Index", "AppGroup", null, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
}
