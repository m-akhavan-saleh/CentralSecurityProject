@model CentralSecurityProject.Models.Security.AppResourceModel
<h4><i class="glyphicon glyphicon-apple"></i>تعریف @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Create", "AppResource", null, FormMethod.Post, htmlAttributes: new { }))
{
    @Html.AntiForgeryToken() // استفاده از متد فوق به جهت جلوگیری از ارسال درخواست  خارج از سایت

    @Html.ValidationSummary(false, null, htmlAttributes: new { @class = "alert alert-danger" }) // false : دراین زمان علاوه بر خطاهای سطح فرم خطاهای کنترلر ها رو نیز نمایش می دهد

    <div class="form-group row">
        @Html.LabelFor(m => m.AppResourceNo, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AppResourceNo, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.AppResourceNo, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ApplicationId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ApplicationId, (SelectList)ViewBag.Applications, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ApplicationId, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.RefAppResourceId, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RefAppResourceId, (SelectList)ViewBag.AppResources, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RefAppResourceId, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ResourceName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ResourceName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ResourceName, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ResourceDesc, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ResourceDesc, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ResourceDesc, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Show, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.Show, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Show, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ControlName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ControlName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ControlName, "", new { @class = "text-danger field-validation-error" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-md-10">
            <input type="submit" value=@Resources.Resource.Submit class="btn btn-success" />
            @Html.ActionLink(Resources.Resource.Back, "Index", "AppResource", null, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
}
