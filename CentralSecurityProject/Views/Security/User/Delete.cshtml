@model CentralSecurityProject.Models.Security.UserModel
<h4><i class="glyphicon glyphicon-apple"></i>حذف @ViewBag.Title</h4>
<hr />

@using (Html.BeginForm("Delete", "User", FormMethod.Post, htmlAttributes: new { }))
{
