        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.OldPass, htmlAttributes: new { @class = "col-md-2 col-form-label" })
