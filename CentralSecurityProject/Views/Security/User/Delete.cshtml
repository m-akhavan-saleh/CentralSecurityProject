            @Html.TextBoxFor(m => m.UserLogin, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "col-md-2 col-form-label" })
